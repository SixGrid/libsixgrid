{
    "include": [
        "package\\.json",
        "src/**/*"
    ],
    "exclude": ["node_modules", "dist"],
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./",
        "noImplicitAny": true,
        "inlineSources": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "lib": [
            "DOM",
            "ES2021"
        ],
        "types": ["node"],
        "target": "ES2021",
        "useDefineForClassFields": true,
        "declaration": true,
        "resolveJsonModule": true
    }
}